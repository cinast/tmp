{
    "$schema": "./@types/schema/package/index.json",
    "package_version": 2,
    "name": "cocos-svg-series",
    "version": "1.0.0",
    "author": "Cinast",
    "editor": ">=3.0.0",
    "scripts": {
        "preinstall": "node ./scripts/preinstall.js",
        "build": "tsc",
        "watch": "tsc -w"
    },
    "description": "i18n:cocos-svg-series.description",
    "main": "./dist/main.js",
    "panels": {},
    "contributions": {
        "importer": {
            "*.svg": "./dist/importer.js"
        },
        "menu": [
            {
                "path": "扩展/SVG工具",
                "label": "导入SVG文件",
                "message": "openImportSVG"
            },
            {
                "path": "扩展/SVG工具",
                "label": "批量导入SVG",
                "message": "openImportSVGBatch"
            }
        ],
        "messages": {
            "openImportSVG": {
                "methods": [
                    "openImportSVG"
                ]
            }
        },
        "shortcuts": [
            {
                "message": "openImportSVG",
                "win": "Ctrl+Shift+I",
                "mac": "Cmd+Shift+I"
            }
        ],
        "asset-db": {
            "mount": {
                "path": "./assets",
                "readonly": true,
                "visible": true
            }
        },
        "scene": {
            "script": "./dist/scene.js"
        }
    },
    "devDependencies": {
        "@cocos/creator-types": "^3.8.7",
        "@types/node": "^18.17.1",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "flubber": "^0.4.2",
        "svg.js": "^2.7.1"
    }
}
